{
	"manifest_version": 2,
	"name": "Monitor de Privacidade",
	"version": "1.0",
	"description": "Detecta conexões de terceira parte, ameaças de sequestro, armazenamento local, cookies e Canvas Fingerprinting.",
	"icons": {
		"48": "icon.png"
	},
	"permissions": ["webRequest", "webRequestBlocking", "<all_urls>", "cookies", "storage", "tabs"],
	"background": {
		"scripts": ["background.js"]
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Monitor de Privacidade",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["contentScript.js"]
		}
	]
}
